<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PinCodes.Authorization.Views.Pages.CodePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Grid
        ColumnDefinitions="*"
        RowDefinitions="Auto, Auto, Auto"
        RowSpacing="30">

        <VerticalStackLayout x:Name="LayoutHeaders" Grid.Row="0" />

        <StackLayout x:Name="CodeViewerComponent" Grid.Row="1" />

        <VerticalStackLayout x:Name="KeyboardComponent" Grid.Row="2" />
    </Grid>
</ContentPage>