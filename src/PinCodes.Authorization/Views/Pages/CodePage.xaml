<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PinCodes.Authorization.Views.Pages.CodePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <VerticalStackLayout Spacing="30">
        <Grid
            ColumnDefinitions="*"
            RowDefinitions="Auto, Auto, Auto"
            RowSpacing="20">
            <Image x:Name="IllustrationImage" Grid.Row="0" />
            <VerticalStackLayout x:Name="LayoutHeaders" Grid.Row="1" />
            <StackLayout x:Name="CodeViewerComponent" Grid.Row="2" />
        </Grid>

        <VerticalStackLayout x:Name="KeyboardComponent" />
    </VerticalStackLayout>
</ContentPage>